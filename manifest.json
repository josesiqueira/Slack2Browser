{
  "manifest_version": 3,
  "name": "Slack2Browser",
  "version": "1.0.2",
  "description": "Opens Slack links in browser instead of the desktop app",
  "browser_specific_settings": {
    "gecko": {
      "id": "slack2browser@josesiqueira",
      "strict_min_version": "128.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.slack.com/archives/*",
        "https://*.slack.com/archives/*",
        "https://*.slack.com/ssb/redirect*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
