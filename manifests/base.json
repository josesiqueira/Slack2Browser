{
  "manifest_version": 3,
  "name": "Slack2Browser",
  "version": "1.0.0",
  "description": "Opens Slack links in browser instead of the desktop app",
  "content_scripts": [
    {
      "matches": [
        "http://*.slack.com/archives/*",
        "https://*.slack.com/archives/*",
        "https://*.slack.com/ssb/redirect*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
